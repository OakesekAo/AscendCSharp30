{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/servicehub-.txt", "rollingInterval": "Day" } }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "EmailSettings": { "Provider": "Console", "SmtpServer": "smtp.gmail.com", "SmtpPort": 587 },
  "DatabaseSettings": { "ConnectionString": "", "Provider": "InMemory" },
  "AppSettings": { "ApiVersion": "1.0.0", "AppName": "ServiceHub" }
}
